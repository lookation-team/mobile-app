<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="2" id="com.lookation.app" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Lookation</name>
    <description>
        Lookation's mobile app. Find the place that fit to you!
    </description>
    <author email="contact@lookation.com" href="http://lookation.com">
        Lookation Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/screen-hdpi-portrait.jpg" />
        <splash density="port-ldpi" src="res/screen/android/screen-ldpi-portrait.jpg" />
        <splash density="port-mdpi" src="res/screen/android/screen-mdpi-portrait.jpg" />
        <splash density="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.jpg" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="Orientation" value="portrait" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="Orientation" value="portrait" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.1.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
